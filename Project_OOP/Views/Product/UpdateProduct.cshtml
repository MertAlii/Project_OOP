@model Project_OOP.Entity.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_CodeLayout.cshtml";
}

<h1>Ürün Güncelleme Sayfası</h1>


<form method="post">
    @Html.Label("Ürün ID")
    @Html.TextBoxFor(x => x.ProductId, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Fiyatı")
    @Html.TextBoxFor(x => x.ProductPrice, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Stok")
    @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control" })
    <br />
    <button class="btn btn-outline-info">Ürünü Güncelle</button>
</form>